{
  "manifest_version": 3,
  "name": "Domain Drainer",
  "version": "1.5.0",
  "description": "Recursively download an entire website, including CDN assets, images, and CSS.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}